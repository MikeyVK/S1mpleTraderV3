{#- tier0_base_artifact.jinja2 - Universal base template for all artifacts -#}
{#- Version: 1.1.0 -#}
{#- Purpose: Provides SCAFFOLD metadata header that adapts to output format -#}
{#-
TEMPLATE_METADATA:
  enforcement: STRICT
  level: format
  validates:
    strict:
      - "^# SCAFFOLD:"
      - "^<!-- SCAFFOLD:"
  extends: null
  purpose: "Universal base for all artifacts - provides format-adaptive SCAFFOLD metadata"
  version: "1.1.0"
  introspection:
    template_id: tier0_base_artifact
    tier: 0
    variables:
      required:
        - artifact_type
        - timestamp
        - output_path
        - format
      optional:
        - template_version
    exports_blocks:
      - content
-#}

{#- WHITESPACE STRATEGY (Issue #72):
    Block opening with right-trim ({% block content -%}) prevents extra blank lines
-#}

{%- if format == "markdown" -%}
<!-- SCAFFOLD: template={{ artifact_type }} version={{ template_version }} created={{ timestamp }} path={{ output_path }} -->
{%- else -%}
# SCAFFOLD: template={{ artifact_type }} version={{ template_version }} created={{ timestamp }} path={{ output_path }}
{%- endif %}
{% block content -%}
{%- endblock %}
