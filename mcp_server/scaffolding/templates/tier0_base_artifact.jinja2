{#- tier0_base_artifact.jinja2 - Universal base template for all artifacts -#}
{#- Version: 1.0.0 -#}
{#- Purpose: Provides SCAFFOLD metadata header that adapts to output format -#}
{#-
TEMPLATE_METADATA:
  enforcement: STRICT
  level: format
  validates:
    strict:
      - "^# SCAFFOLD:"
      - "^<!-- SCAFFOLD:"
  extends: null
  purpose: "Universal base for all artifacts - provides format-adaptive SCAFFOLD metadata"
  version: "1.0.0"
  introspection:
    template_id: tier0_base_artifact
    tier: 0
    variables:
      required:
        - artifact_type
        - timestamp
        - output_path
        - format
      optional:
        - template_version
    exports_blocks:
      - content
-#}
{% block content %}
{%- set comment_start = "#" if format in ["python", "yaml", "shell"] else "<!--" -%}
{%- set comment_end = "" if format in ["python", "yaml", "shell"] else " -->" -%}
{{comment_start}} SCAFFOLD: template={{artifact_type}} version={{template_version | default("1.0")}} created={{timestamp}} path={{output_path}}{{comment_end}}{{ "\n" }}

{#- Child templates extend content here -#}
{% endblock %}
