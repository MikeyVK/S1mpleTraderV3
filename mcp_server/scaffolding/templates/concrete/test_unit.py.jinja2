{% endif %}

# Third-party
{{ pytest_p.pattern_pytest_imports() | trim }}
{% if has_pydantic %}
from pydantic import ValidationError
{% endif %}

# Project modules
from {{ module_under_test }} import {{ imported_classes | default(['*']) | join(', ') }}
{% endblock %}

{# Override class_structure block for test class #}
