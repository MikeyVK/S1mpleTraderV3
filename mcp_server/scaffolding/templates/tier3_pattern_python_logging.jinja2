{#-
Tier 3 Pattern: Logging
- Macro library only: no extends, no blocks
- Use message keys (i18n) instead of user-facing strings
-#}

{% macro pattern_logging_imports() -%}
import logging
{%- endmacro %}

{% macro pattern_logging_get_logger(name="__name__") -%}
logger = logging.getLogger({{ name }})
{%- endmacro %}

{% macro pattern_logging_call(level="info", message_key="log.unknown") -%}
logger.{{ level }}("{{ message_key }}")
{%- endmacro %}
