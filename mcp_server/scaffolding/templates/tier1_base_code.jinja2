{#- tier1_base_code.jinja2 - Base template for code artifacts -#}
{#- Version: 1.1.0 -#}
{#- Purpose: Provides imports, class structure, function blocks -#}
{%- extends "tier0_base_artifact.jinja2" -%}

{#-
TEMPLATE_METADATA:
  template_id: tier1_base_code
  version: "1.1.0"
  tier: 1
  parent: tier0_base_artifact
  description: "Format base for code artifacts - provides structural blocks"
  variables:
    required:
      - class_name
      - class_docstring
    optional:
      - imports
  exports_blocks:
    - imports_section
    - class_structure
    - methods
  validation:
    enforcement: STRICT
    level: format
    validates:
      strict:
        - rule: "imports_at_top"
          message: "Imports must be at top of file"
-#}

{%- block content -%}
{%- block imports_section -%}
{# Standard library imports #}
{%- if imports and imports.stdlib -%}
{%- for imp in imports.stdlib %}
{{ imp }}
{%- endfor -%}
{%- endif %}

{# Third-party imports #}
{%- if imports and imports.third_party -%}
{%- for imp in imports.third_party %}
{{ imp }}
{%- endfor -%}
{%- endif %}

{# Project imports #}
{%- if imports and imports.project -%}
{%- for imp in imports.project %}
{{ imp }}
{%- endfor -%}
{%- endif -%}
{%- endblock -%}

{%- block class_structure -%}
class {{ class_name }}:
    """{{ class_docstring }}"""
    {%- block methods -%}
    pass
    {%- endblock -%}
{%- endblock -%}
{%- endblock -%}
