{#- Purpose: Adds Markdown formatting for PR/issue/milestone descriptions -#}
{%- extends "tier1_base_tracking.jinja2" -%}

{#-
TEMPLATE_METADATA:
  enforcement: STRICT
  level: format
  validates:
    strict:
      - "^#\\s+"
      - "^##\\s+"
    characteristics:
      - "Headers (H1 required via ^#, H2/H3 common)"
      - "Bullet lists (-)"
      - "Task lists (- [ ]/- [x]) for PRs"
      - "Code blocks (```)"
      - "Bold (**text**) and emphasis (*text*)"
  extends: tier1_base_tracking.jinja2
  purpose: "Language base for Markdown tracking artifacts - PR descriptions, issues, milestones"
  version: "1.1.0"
  changelog:
    - version: "1.1.0"
      date: "2026-02-06"
      changes: "ALIGNMENT: Relaxed validates.strict to minimal common denominator (H1+H2 only), moved H3/checkboxes to characteristics"
    - version: "1.0.0"
      date: "2026-02-06"
      changes: "Initial version - Markdown formatting for PR/issue/milestone (Task 3.7)"
  introspection:
    template_id: tier2_tracking_markdown
    tier: 2
    parent: tier1_base_tracking
    variables:
      required:
        - title
      optional:
        - summary
        - sections
        - checklist
        - code_blocks
        - references
    exports_blocks:
      - markdown_header
      - markdown_sections
      - markdown_checklist
      - markdown_footer
-#}

