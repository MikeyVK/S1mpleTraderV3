{#- tier1_base_document.jinja2 - Base template for document artifacts -#}
{#- Version: 2.0.0 (Issue #72 Cycle 3: Universal document structure) -#}
{#- Purpose: Provides Status/Purpose/Scope/Prerequisites/Related/Version History -#}
{%- extends "tier0_base_artifact.jinja2" -%}

{#-
TEMPLATE_METADATA:
  enforcement: STRICT
  level: format
  validates:
    strict:
      - "^# "
      - "^## "
      - "^\\*\\*Status:\\*\\*"
      - "^\\*\\*Phase:\\*\\*"
  extends: tier0_base_artifact.jinja2
  purpose: "Universal base for document artifacts - provides standard sections"
  version: "2.0.0"
  introspection:
    template_id: tier1_base_document
    tier: 1
    parent: tier0_base_artifact
    variables:
      required:
        - title
        - purpose
        - scope_in
        - scope_out
      optional:
        - status
        - phase
        - prerequisites
        - related_docs
    exports_blocks:
      - document_content
-#}

{%- block content -%}
# {{ title }}

**Status:** {{ status | default("Draft") }} | **Phase:** {{ phase | default("Design") }}

---

## Purpose

{{ purpose }}

## Scope

**In Scope:**
{{ scope_in }}

**Out of Scope:**
{{ scope_out }}

{% if prerequisites -%}
## Prerequisites

{% for prereq in prerequisites -%}
- {{ prereq }}
{% endfor -%}
{%- endif %}

{%- block document_content %}{% endblock %}

## Related Documentation

{{ related_docs | default("None") }}

## Version History

| Version | Date | Changes | Author |
|---------|------|---------|--------|
| 0.1 | {{ timestamp }} | Initial draft | Agent |
{%- endblock -%}
