"""
TEMPLATE_METADATA:
  enforcement: ARCHITECTURAL
  tier: 3
  category: pattern
  provides_macros:
    - pattern_purpose_section
    - pattern_scope_section
  used_by:
    - research.md
    - planning.md
    - design.md
    - architecture.md
    - reference.md
  compatibility: tier1_base_document.jinja2 purpose_section and scope_section blocks
"""

{% macro pattern_purpose_section(purpose) -%}
{% if purpose -%}
## Purpose

{{ purpose }}

{% endif -%}
{%- endmacro %}

{% macro pattern_scope_section(scope_in, scope_out) -%}
{% if scope_in or scope_out -%}
## Scope

{% if scope_in -%}
**In Scope:**
{{ scope_in }}

{% endif -%}
{% if scope_out -%}
**Out of Scope:**
{{ scope_out }}

{% endif -%}
{% endif -%}
{%- endmacro %}

