{% extends "base/base_component.py.jinja2" %}

{% block description %}{{ description | default(name + ' schema definition') }}{% endblock %}

{% block layer %}Config (Schemas){% endblock %}

{% block dependencies %}pydantic{% endblock %}

{% block responsibilities %}    - Define {{ name }} configuration structure
    - Provide validation via Pydantic
    - Enable type-safe configuration{% endblock %}

{% block thirdparty_imports %}
from pydantic import BaseModel, Field
{% endblock %}

{% block content %}
{% if models %}
{% for model in models %}
class {{ model.name }}(BaseModel):
    """{{ model.docstring | default(model.name + ' configuration.') }}"""
    {% if model.fields %}
    {% for field in model.fields %}
    {{ field.name }}: {{ field.type }}{% if field.default is defined %} = {{ field.default }}{% endif %}
    {% endfor %}
    {% else %}
    pass
    {% endif %}

{% endfor %}
{% else %}
class {{ name }}(BaseModel):
    """{{ docstring | default(description) }}"""
    # TODO: Add fields
    # field_name: type = Field(..., description="...")
    pass
{% endif %}
{% endblock %}
